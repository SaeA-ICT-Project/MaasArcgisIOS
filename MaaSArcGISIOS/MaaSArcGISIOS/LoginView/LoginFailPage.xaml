<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaaSArcGISIOS.LoginView.LoginFailPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Padding="10,5,10,5" Margin="5" x:Name="xErrorMessageLabel" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
        <Label Grid.Row="3" Padding="10,5,10,5" Margin="5" Text="아래의 버튼을 눌러 로그인 페이지로 다시 이동합니다." FontAttributes="Bold"/>
        <Button Grid.Row="4"  Padding="10,5,10,5" Margin="5" Text="로그인 화면으로 돌아가기" TextColor="White" BackgroundColor="OrangeRed" BorderColor="Transparent" Clicked="Button_Clicked"/>
    </Grid>
</ContentPage>